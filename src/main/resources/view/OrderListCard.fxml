<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="60" GridPane.columnIndex="0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <HBox spacing="1" alignment="CENTER_LEFT">
                <Label styleClass="cell_small_label_bold" text="Order ID: " />
                <Label fx:id="id" styleClass="cell_small_label" text="\$id" />
            </HBox>
            <HBox spacing="1" alignment="CENTER_LEFT">
                <Label styleClass="cell_small_label_bold" text="Date: " />
                <Label fx:id="date" styleClass="cell_small_label" text="\$date" />
            </HBox>
            <HBox spacing="1" alignment="CENTER_LEFT">
                <Label styleClass="cell_small_label_bold" text="Remark: " wrapText="true" />
                <Label fx:id="remark" styleClass="cell_small_label" text="\$remark" wrapText="true" />
            </HBox>
            <HBox spacing="1" alignment="CENTER_LEFT">
                <Label styleClass="cell_small_label_bold" text="Status: " />
                <Label fx:id="status" styleClass="cell_small_label" text="\$status" />
            </HBox>
        </VBox>
    </GridPane>
</HBox>
